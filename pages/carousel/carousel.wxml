<swiper indicator-dots="{{indicatorDots}}"
  autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
  <block wx:for="{{imgUrls}}" wx:key="item">
    <swiper-item>
      <image bindtap="previewImg" data-src="{{item}}" src="{{item}}" class="slide-image" mode="center"/>
    </swiper-item>
  </block>
</swiper>
<view class='wrap'>
  <button bindtap="changeIndicatorDots" class='btn'> indicator-dots </button>
  <button bindtap="changeAutoplay" class='btn'> autoplay </button>
</view>
